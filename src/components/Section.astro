---
import type { Subsection } from '../types/types';

import ProductCard from './ProductCard';

interface Props {
  id: string;
  title: string;
  subsections: Record<string, Subsection>;
}

const { id, title, subsections } = Astro.props;
---

<section id={id} class="py-20 bg-gray-50">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-bold text-center text-red-600 mb-10">{title}</h2>

    {Object.entries(subsections).map(([key, subsection]) => (
      <div class="mb-10">
        <h3 class="text-2xl font-semibold text-gray-800 mb-4 text-center">{subsection.text}</h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
          {subsection.products.map(p => (
            <ProductCard product={p} client:visible />
          ))}
        </div>
      </div>
    ))}
  </div>
</section>
